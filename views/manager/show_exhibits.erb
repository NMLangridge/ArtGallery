<div id="exhibit-detail"
  <div class="exhibit-detail"

    <p>Title: <%= @exhibit.title %></p>
    <p>Year: <%= @exhibit.year %></p>
    <p>Description: <%= @exhibit.description %></p>
    <p>Category: <%= @exhibit.category %></p>

    <% for artist in @artists %>
    <p><%= "Artist:" %> <%= artist.first_name %> <%= artist.last_name %></p>
    <p><a href="/manager/artists/<%= artist.id %>">Show Artist</a></p>
    <% end %>

  </div>
</div>

<form method="get" action="/manager/exhibit/<%= @exhibit.id %>/edit">

  <input type="submit" value="Edit Exhibit"/>

</form>

<form method="post" action="/manager/exhibit/<%= @exhibit.id %>/delete">

  <input type="submit" value="Delete Exhibit"/>

</form>
